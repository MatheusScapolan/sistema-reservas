<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Sistema de Reservas INTELI' %></title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- INTELI Theme CSS -->
    <link rel="stylesheet" href="/css/inteli-theme.css">

    <!-- CSS customizado -->
    <link rel="stylesheet" href="/css/style.css">

    <style>
        /* Logo INTELI real */
        .inteli-logo {
            display: flex;
            align-items: center;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .inteli-logo:hover {
            text-decoration: none;
            transform: scale(1.1);
        }

        .inteli-logo-img {
            height: 50px;
            width: auto;
            /* Logo original com cores naturais */
        }

        /* Manter os pontinhos na cor original */
        .inteli-logo-img.keep-dots {
            filter: none;
        }

        /* Dropdown do usuário melhorado */
        .user-dropdown {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 25px;
            padding: 8px 16px;
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .user-dropdown:hover {
            background: rgba(255, 255, 255, 0.15);
            color: white;
            text-decoration: none;
        }

        .user-dropdown .dropdown-toggle::after {
            margin-left: 8px;
        }

        .dropdown-menu {
            border: none;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            padding: 8px;
            margin-top: 8px;
        }

        .dropdown-item {
            border-radius: 8px;
            padding: 12px 16px;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: all 0.2s ease;
            font-weight: 500;
        }

        .dropdown-item:hover {
            background: #f8f9fa;
            transform: translateX(4px);
        }

        .dropdown-item.text-danger:hover {
            background: #fee;
            color: #dc3545;
        }

        .dropdown-divider {
            margin: 8px 0;
            border-color: #e9ecef;
        }

        /* Ícones do menu */
        .nav-link i {
            margin-right: 8px;
            width: 16px;
            text-align: center;
        }
    </style>
</head>
<body>
    <header class="inteli-header">
        <nav class="navbar navbar-expand-lg inteli-navbar">
            <div class="container">
                <a class="inteli-logo" href="/">
                    <img src="/images/inteli-logo-branca-vermelha.png" alt="INTELI" class="inteli-logo-img">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/">
                                <i class="fas fa-home"></i>
                                Início
                            </a>
                        </li>
                        <% if (isAuthenticated) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/rooms">
                                <i class="fas fa-door-open"></i>
                                Salas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/bookings">
                                <i class="fas fa-calendar-check"></i>
                                Reservas
                            </a>
                        </li>
                        <% } %>
                    </ul>

                    <ul class="navbar-nav">
                        <% if (isAuthenticated) { %>
                        <li class="nav-item dropdown">
                            <a class="user-dropdown dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user"></i>
                                <span><%= user ? user.name.split(' ').slice(0, 2).join(' ') : 'Usuário' %></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" href="/profile">
                                        <i class="fas fa-user"></i>
                                        Meu Perfil
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-danger" href="/logout">
                                        <i class="fas fa-sign-out-alt"></i>
                                        Sair
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <% } else { %>
                        <li class="nav-item me-2">
                            <a class="nav-link" href="/login">
                                <i class="fas fa-sign-in-alt"></i>
                                Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-inteli-secondary btn-sm" href="/register">
                                <i class="fas fa-user-plus"></i>
                                Cadastro
                            </a>
                        </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">