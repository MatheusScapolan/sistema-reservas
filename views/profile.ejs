<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meu Perfil - Sistema de Reservas INTELI</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- INTELI Theme CSS -->
    <link rel="stylesheet" href="/css/inteli-theme.css">

    <!-- CSS customizado para perfil -->
    <style>
        body {
            font-family: var(--font-primary);
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
        }

        /* Header */
        .main-header {
            background: var(--inteli-roxo);
            padding: 20px 0;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .logo-section {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .inteli-logo {
            display: flex;
            align-items: center;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .inteli-logo:hover {
            text-decoration: none;
            transform: scale(1.1);
        }

        .inteli-logo-img {
            height: 50px;
            width: auto;
        }

        .nav-menu {
            display: flex;
            list-style: none;
            margin: 0;
            padding: 0;
            gap: 30px;
        }

        .nav-item {
            color: white;
            font-family: var(--font-primary);
            font-weight: 500;
            font-size: 16px;
            cursor: pointer;
            padding: 10px 15px;
            border-radius: 8px;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .nav-item:hover {
            background: rgba(255, 255, 255, 0.1);
            color: var(--inteli-coral);
        }

        .nav-item.active {
            background: var(--inteli-coral);
            color: white;
        }

        .user-section {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .user-dropdown {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 25px;
            padding: 8px 16px;
            color: white;
            font-family: var(--font-primary);
            font-weight: 500;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

        .user-dropdown:hover {
            background: rgba(255, 255, 255, 0.2);
            color: white;
        }

        /* Main Content */
        .main-content {
            max-width: 800px;
            margin: 40px auto;
            padding: 0 20px;
        }

        .page-header {
            margin-bottom: 30px;
        }

        .page-title {
            font-family: var(--font-secondary);
            font-weight: 700;
            font-size: 32px;
            color: var(--inteli-roxo);
            margin-bottom: 10px;
        }

        .page-subtitle {
            font-family: var(--font-primary);
            font-size: 16px;
            color: var(--inteli-cinza-escuro);
        }

        /* Profile Card */
        .profile-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin-bottom: 30px;
        }

        .profile-card-header {
            background: var(--inteli-azul);
            color: white;
            padding: 20px 30px;
            border-bottom: none;
        }

        .profile-card-title {
            font-family: var(--font-secondary);
            font-weight: 600;
            font-size: 20px;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
            color: white;
        }

        .profile-card-title i {
            color: var(--inteli-lilas);
        }

        .profile-card-body {
            padding: 30px;
        }

        /* Form Styles */
        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            font-family: var(--font-primary);
            font-weight: 600;
            font-size: 14px;
            color: var(--inteli-roxo);
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .form-label i {
            color: var(--inteli-lilas);
        }

        .form-control {
            border: 2px solid var(--inteli-cinza);
            border-radius: 8px;
            padding: 12px 16px;
            font-family: var(--font-primary);
            font-size: 14px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: var(--inteli-azul);
            box-shadow: 0 0 0 0.2rem rgba(20, 38, 171, 0.25);
        }

        /* Password Section */
        .password-section {
            border-top: 1px solid var(--inteli-cinza);
            padding-top: 25px;
            margin-top: 25px;
        }

        .password-title {
            font-family: var(--font-secondary);
            font-weight: 600;
            font-size: 18px;
            color: var(--inteli-roxo);
            margin-bottom: 10px;
        }

        .password-subtitle {
            font-family: var(--font-primary);
            font-size: 14px;
            color: var(--inteli-cinza-escuro);
            margin-bottom: 20px;
        }

        /* Button */
        .btn-update {
            background: var(--inteli-coral);
            border: none;
            border-radius: 8px;
            padding: 15px 30px;
            font-family: var(--font-primary);
            font-weight: 600;
            font-size: 16px;
            color: white;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .btn-update:hover {
            background: #e63939;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(255, 69, 69, 0.3);
        }

        .btn-update i {
            color: white;
        }

        /* Alerts */
        .alert {
            border-radius: 8px;
            padding: 15px 20px;
            margin-bottom: 20px;
            font-family: var(--font-primary);
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .alert-success {
            background-color: rgba(40, 167, 69, 0.1);
            border: 1px solid rgba(40, 167, 69, 0.2);
            color: #155724;
        }

        .alert-success i {
            color: var(--inteli-lilas);
        }

        .alert-danger {
            background-color: rgba(220, 53, 69, 0.1);
            border: 1px solid rgba(220, 53, 69, 0.2);
            color: #721c24;
        }

        .alert-danger i {
            color: var(--inteli-lilas);
        }

        /* Footer */
        .main-footer {
            background: var(--inteli-roxo);
            color: white;
            text-align: center;
            padding: 20px 20px;
            margin-top: 40px;
        }

        .footer-text {
            font-family: var(--font-primary);
            font-weight: 500;
            font-size: 16px;
            margin-bottom: 5px;
        }

        .footer-subtitle {
            font-family: var(--font-primary);
            font-size: 14px;
            color: rgba(255, 255, 255, 0.8);
        }

        /* Responsive */
        @media (max-width: 768px) {
            .header-container {
                flex-direction: column;
                gap: 20px;
            }

            .nav-menu {
                gap: 20px;
            }

            .main-content {
                padding: 20px;
            }

            .profile-card-body {
                padding: 20px;
            }

            .page-title {
                font-size: 28px;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="main-header">
        <div class="header-container">
            <div class="logo-section">
                <a class="inteli-logo" href="/">
                    <img src="/images/inteli-logo-branca-vermelha.png" alt="INTELI" class="inteli-logo-img">
                </a>
            </div>

            <nav>
                <ul class="nav-menu">
                    <li class="nav-item" onclick="window.location.href='/'">
                        <i class="fas fa-home"></i>
                        In√≠cio
                    </li>
                    <li class="nav-item" onclick="window.location.href='/rooms'">
                        <i class="fas fa-door-open"></i>
                        Salas
                    </li>
                    <li class="nav-item" onclick="window.location.href='/bookings'">
                        <i class="fas fa-calendar-check"></i>
                        Reservas
                    </li>
                </ul>
            </nav>

            <div class="user-section">
                <div class="dropdown">
                    <button class="user-dropdown dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user"></i>
                        <span><%= user ? user.name.split(' ').slice(0, 2).join(' ') : 'Usu√°rio' %></span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li>
                            <a class="dropdown-item" href="/profile">
                                <i class="fas fa-user"></i>
                                Meu Perfil
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-danger" href="/logout">
                                <i class="fas fa-sign-out-alt"></i>
                                Sair
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Page Header -->
        <div class="page-header">
            <h1 class="page-title">Meu Perfil</h1>
            <p class="page-subtitle">Gerencie suas informa√ß√µes pessoais e configura√ß√µes da conta</p>
        </div>

        <!-- Alerts -->
        <% if (message && message.length > 0) { %>
            <div class="alert alert-success" role="alert">
                <i class="fas fa-check-circle"></i>
                <%= message %>
            </div>
        <% } %>
        <% if (error && error.length > 0) { %>
            <div class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-triangle"></i>
                <%= error %>
            </div>
        <% } %>

        <!-- Profile Card -->
        <div class="profile-card">
            <div class="profile-card-header">
                <h2 class="profile-card-title">
                    <i class="fas fa-user-circle"></i>
                    Informa√ß√µes Pessoais
                </h2>
            </div>
            <div class="profile-card-body">
                <form action="/profile" method="POST">
                    <div class="form-group">
                        <label for="name" class="form-label">
                            <i class="fas fa-user"></i>
                            Nome completo
                        </label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" required>
                    </div>

                    <div class="form-group">
                        <label for="email" class="form-label">
                            <i class="fas fa-envelope"></i>
                            Email
                        </label>
                        <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
                    </div>

                    <!-- Password Section -->
                    <div class="password-section">
                        <h3 class="password-title">Alterar Senha</h3>
                        <p class="password-subtitle">Preencha os campos abaixo apenas se desejar alterar sua senha.</p>

                        <div class="form-group">
                            <label for="currentPassword" class="form-label">
                                <i class="fas fa-lock"></i>
                                Senha atual
                            </label>
                            <input type="password" class="form-control" id="currentPassword" name="currentPassword" placeholder="Digite sua senha atual">
                        </div>

                        <div class="form-group">
                            <label for="newPassword" class="form-label">
                                <i class="fas fa-key"></i>
                                Nova senha
                            </label>
                            <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="Digite sua nova senha">
                        </div>

                        <div class="form-group">
                            <label for="confirmPassword" class="form-label">
                                <i class="fas fa-check-circle"></i>
                                Confirmar nova senha
                            </label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirme sua nova senha">
                        </div>
                    </div>

                    <button type="submit" class="btn-update">
                        <i class="fas fa-save"></i>
                        Atualizar Perfil
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="main-footer">
        <div class="footer-text">Sistema de Reservas INTELI ¬© 2025</div>
        <div class="footer-subtitle">Instituto de Tecnologia e Lideran√ßa</div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script para navega√ß√£o -->
    <script>
        // Navega√ß√£o do header
        document.querySelectorAll('.nav-item').forEach((item, index) => {
            item.addEventListener('click', function() {
                // Remove active de todos
                document.querySelectorAll('.nav-item').forEach(nav => nav.classList.remove('active'));
                // Adiciona active no clicado
                this.classList.add('active');

                // Navega√ß√£o
                switch(index) {
                    case 0: // In√≠cio
                        window.location.href = '/';
                        break;
                    case 1: // Salas
                        window.location.href = '/rooms';
                        break;
                    case 2: // Reservas
                        window.location.href = '/bookings';
                        break;
                }
            });
        });

        // Valida√ß√£o do formul√°rio
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            form.addEventListener('submit', function(event) {
                const newPassword = document.getElementById('newPassword').value;
                const confirmPassword = document.getElementById('confirmPassword').value;
                const currentPassword = document.getElementById('currentPassword').value;

                // Se algum campo de senha estiver preenchido, todos devem estar
                if (newPassword || confirmPassword || currentPassword) {
                    if (!newPassword || !confirmPassword || !currentPassword) {
                        event.preventDefault();
                        alert('Para alterar a senha, preencha todos os campos de senha.');
                        return;
                    }

                    // Verificar se as senhas coincidem
                    if (newPassword !== confirmPassword) {
                        event.preventDefault();
                        alert('As novas senhas n√£o coincidem.');
                        return;
                    }
                }
            });
        });
    </script>
</body>
</html>
