<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Redefinir Senha - Sistema de Reservas INTELI</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- INTELI Fonts: Space Mono Bold + Manrope Normal -->
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200;300;400;500;600;700;800&family=Space+Mono:wght@400;700&display=swap" rel="stylesheet">

    <!-- INTELI Theme CSS -->
    <link rel="stylesheet" href="/css/inteli-theme.css">

    <!-- CSS customizado para reset-password -->
    <style>
        body {
            background: var(--inteli-roxo);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: var(--font-primary);
        }

        .reset-password-container {
            width: 100%;
            max-width: 400px;
            padding: 20px;
        }

        .reset-password-card {
            background: var(--inteli-branco);
            border-radius: 16px;
            padding: 40px 30px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            text-align: center;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .logo-container {
            margin-bottom: 30px;
            display: flex;
            justify-content: center;
        }

        .inteli-logo {
            max-width: 150px;
            height: auto;
            width: auto;
            filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
        }

        .welcome-title {
            font-family: var(--font-secondary);
            font-weight: 700;
            font-size: 28px;
            color: var(--inteli-roxo);
            margin-bottom: 10px;
        }

        .welcome-subtitle {
            font-family: var(--font-primary);
            font-size: 14px;
            color: var(--inteli-cinza-escuro);
            margin-bottom: 30px;
            line-height: 1.5;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .form-label {
            font-family: var(--font-primary);
            font-weight: 600;
            font-size: 14px;
            color: var(--inteli-roxo);
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .form-control {
            border: 2px solid var(--inteli-cinza);
            border-radius: 8px;
            padding: 12px 16px;
            font-family: var(--font-primary);
            font-size: 14px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: var(--inteli-coral);
            box-shadow: 0 0 0 3px rgba(255, 69, 69, 0.1);
            outline: none;
        }

        .form-control::placeholder {
            color: var(--inteli-cinza-escuro);
        }

        .form-text {
            font-family: var(--font-primary);
            font-size: 12px;
            color: var(--inteli-cinza-escuro);
            margin-top: 5px;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .btn-reset {
            background: var(--inteli-coral);
            border: none;
            border-radius: 8px;
            padding: 14px 24px;
            font-family: var(--font-primary);
            font-weight: 600;
            font-size: 16px;
            color: var(--inteli-branco);
            width: 100%;
            transition: all 0.3s ease;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .btn-reset:hover {
            background: var(--inteli-azul);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(255, 69, 69, 0.3);
            color: var(--inteli-branco);
        }

        .btn-reset:disabled {
            background: var(--inteli-cinza);
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        .login-link {
            font-family: var(--font-primary);
            font-size: 14px;
            color: var(--inteli-cinza-escuro);
            margin-top: 20px;
        }

        .login-link a {
            color: var(--inteli-azul);
            text-decoration: none;
            font-weight: 600;
        }

        .login-link a:hover {
            color: var(--inteli-lilas);
            text-decoration: underline;
        }

        .alert {
            border-radius: 8px;
            padding: 12px 16px;
            margin-bottom: 20px;
            font-family: var(--font-primary);
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .alert-danger {
            background-color: rgba(220, 53, 69, 0.1);
            color: var(--inteli-vermelho);
            border: 1px solid rgba(220, 53, 69, 0.2);
        }

        .alert-success {
            background-color: rgba(40, 167, 69, 0.1);
            color: #155724;
            border: 1px solid rgba(40, 167, 69, 0.2);
        }

        .token-invalid {
            text-align: center;
            padding: 30px 20px;
        }

        .token-invalid i {
            color: var(--inteli-vermelho);
            margin-bottom: 15px;
        }

        .token-invalid h5 {
            font-family: var(--font-secondary);
            font-weight: 700;
            color: var(--inteli-roxo);
            margin-bottom: 15px;
        }

        .token-invalid p {
            font-family: var(--font-primary);
            color: var(--inteli-cinza-escuro);
            margin-bottom: 20px;
        }

        /* Responsividade */
        @media (max-width: 480px) {
            .reset-password-container {
                padding: 15px;
            }

            .reset-password-card {
                padding: 30px 20px;
            }

            .inteli-logo {
                width: 120px;
            }

            .welcome-title {
                font-size: 24px;
            }
        }
    </style>
</head>
<body>
    <div class="reset-password-container">
        <div class="reset-password-card">
            <!-- Logo INTELI -->
            <div class="logo-container">
                <img src="/images/inteli-logo.png" alt="INTELI Logo" class="inteli-logo">
            </div>

            <!-- Título -->
            <h1 class="welcome-title">Redefinir Senha</h1>
            <p class="welcome-subtitle">Digite sua nova senha abaixo. Certifique-se de escolher uma senha segura.</p>

            <!-- Mensagens de erro/sucesso -->
            <% if (error && error.length > 0) { %>
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle"></i>
                    <%= error %>
                </div>
            <% } %>
            <% if (message && message.length > 0) { %>
                <div class="alert alert-success" role="alert">
                    <i class="fas fa-check-circle"></i>
                    <%= message %>
                </div>
            <% } %>

            <% if (!tokenValid) { %>
                <!-- Token Inválido -->
                <div class="token-invalid">
                    <i class="fas fa-exclamation-triangle fa-3x"></i>
                    <h5>Token Inválido ou Expirado</h5>
                    <p>O link de recuperação de senha é inválido ou já expirou.</p>
                    <a href="/forgot-password" class="btn-reset">
                        <i class="fas fa-redo"></i>
                        Solicitar Nova Recuperação
                    </a>
                </div>
            <% } else { %>
                <!-- Formulário de Reset -->
                <form action="/reset-password" method="POST" id="resetPasswordForm">
                    <input type="hidden" name="token" value="<%= token %>">

                    <!-- Nova Senha -->
                    <div class="form-group">
                        <label for="password" class="form-label">
                            <i class="fas fa-lock"></i>
                            Nova Senha
                        </label>
                        <input type="password"
                               class="form-control"
                               id="password"
                               name="password"
                               minlength="6"
                               placeholder="Digite sua nova senha"
                               required>
                        <div class="form-text">
                            <i class="fas fa-info-circle"></i>
                            A senha deve ter pelo menos 6 caracteres
                        </div>
                    </div>

                    <!-- Confirmar Senha -->
                    <div class="form-group">
                        <label for="confirmPassword" class="form-label">
                            <i class="fas fa-lock"></i>
                            Confirmar Nova Senha
                        </label>
                        <input type="password"
                               class="form-control"
                               id="confirmPassword"
                               name="confirmPassword"
                               minlength="6"
                               placeholder="Confirme sua nova senha"
                               required>
                        <div class="form-text">
                            <i class="fas fa-info-circle"></i>
                            Digite a mesma senha novamente
                        </div>
                    </div>

                    <!-- Botão Submit -->
                    <button type="submit" class="btn-reset" id="submitBtn">
                        <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                        <i class="fas fa-save" id="submitIcon"></i>
                        <span id="submitText">Redefinir Senha</span>
                    </button>
                </form>
            <% } %>

            <!-- Link para login -->
            <div class="login-link">
                <a href="/login">
                    <i class="fas fa-arrow-left"></i>
                    Voltar para o Login
                </a>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('resetPasswordForm');
            if (!form) return;

            const submitBtn = document.getElementById('submitBtn');
            const spinner = submitBtn.querySelector('.spinner-border');
            const passwordInput = document.getElementById('password');
            const confirmPasswordInput = document.getElementById('confirmPassword');

            // Validação de senhas iguais
            function validatePasswords() {
                if (passwordInput.value !== confirmPasswordInput.value) {
                    confirmPasswordInput.setCustomValidity('As senhas não coincidem');
                } else {
                    confirmPasswordInput.setCustomValidity('');
                }
            }

            passwordInput.addEventListener('input', validatePasswords);
            confirmPasswordInput.addEventListener('input', validatePasswords);

            form.addEventListener('submit', function(e) {
                validatePasswords();

                if (!form.checkValidity()) {
                    e.preventDefault();
                    return;
                }

                submitBtn.disabled = true;
                spinner.classList.remove('d-none');
                submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Redefinindo...';
            });
        });
    </script>
</body>
</html>
